{
	"name": "joona-api",
	"version": "0.0.1",
	"main": "app.js",
	"scripts": {
		"start": "env-cmd ./config.env ts-node-dev --respawn src/app.ts",
		"watch": "tsc --watch -p tsconfig.json",
		"build": "tsc -p tsconfig.json",
		"app": "env-cmd ./config.env ts-node src/app.ts",
		"prettier": "prettier **/src/*.ts",
		"build-schemadef": "node combineGraphqlSchema.js && graphql-to-typescript schema.gql src/schemadef.ts",
		"build-json-schema": "node combineGraphqlSchema.js && apollo-codegen introspect-schema schema.gql --output schema.json",
		"create-migration": "typeorm migrations:create -n",
		"generate-migrations": "env-cmd ./config.env typeorm migrations:generate -n",
		"migrations": "env-cmd ./config.env typeorm migrations:run",
		"revert-migration": "env-cmd ./config.env typeorm migrations:revert",
		"clean": "rimraf ./node_modules"
	},
	"dependencies": {
		"apollo-server-express": "^1.3.2",
		"base64-url": "2.1.0",
		"body-parser": "^1.18.2",
		"cors": "^2.8.4",
		"dataloader": "^1.4.0",
		"express": "^4.16.2",
		"express-session": "^1.15.6",
		"graphql": "0.13.1",
		"graphql-tools": "2.21.0",
		"lodash": "^4.17.5",
		"mysql": "^2.15.0",
		"winston": "^2.4.0",
		"bcrypt": "^1.0.3",
		"typeorm": "^0.1.12",
		"reflect-metadata": "^0.1.12"
	},
	"devDependencies": {
		"typescript": "^2.7.2",
		"@types/node": "^9.4.6",
		"@types/async": "^2.0.47",
		"@types/express": "4.11.1",
		"@types/cors": "2.8.3",
		"@types/lodash": "^4.14.104",
		"@types/bcrypt": "^1.0.0",
		"@types/winston": "^2.3.8",
		"@types/jest": "^22.1.3",
		"@playlyfe/gql": "^2.6.0",
		"env-cmd": "^7.0.0",
		"prettier": "^1.10.2",
		"jest": "^22.3.0",
		"tslint": "^5.9.1",
		"tslint-config-prettier": "^1.8.0",
		"ts-node": "^4.1.0",
		"ts-node-dev": "^1.0.0-pre.16",
		"apollo-codegen": "^0.18.5"
	}
}
